<div class="toast"
     data-controller="toast" role="alert" aria-live="assertive" aria-atomic="true"
     data-delay="10000" style="width: 300px">
  <div class="toast-header bg-success text-white">
    <%= icons__check %> <strong class="mr-auto ml-1"><%= title %></strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <%= raw body %>
  </div>
</div>
